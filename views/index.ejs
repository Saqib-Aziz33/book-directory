<% 
    let count = 0
%> 

<div class="books-grid my-5">
    <% for(let book of books){ %>
        <% if(count === 0){ %>
            <div class="child-book d-flex h-50 justify-content-center align-items-center">
                <a href="/new" class="add-new">
                    <i class="fa fa-3x fa-plus"></i>
                </a>
            </div>
        <% } %>  
        <div class="child-book">
            <img style="max-height: 300px;" src="<%=book.img.path%>" alt="">
            <h2><%= book.title %> </h2>
            <h6>by <em><%= book.author %></em></h6>
            <p class="text-muted"><%= book.publish %></p>
            <small><%= book.description %> </small>
            <a class="btn btn-info d-block my-2" href="/<%=book._id %>">Visit</a>
        </div>
        <% count++ %> 
    <% } %>  
</div>